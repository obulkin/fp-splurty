<!DOCTYPE html>
<html>
<head>
	<title>Splurty</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container-fluid">
		<div class="row header-row">
			<header>
				<div class="col-xs-3 col-sm-2">
					<%= link_to(root_path(), class: "logo") do %>
						<div class="circle">
							<br>
							COGITO
							<br>
							ERGO
							<br>
							SUM
						</div>
					<% end %>
				</div>
				<div class="col-md-5 hidden-xs hidden-sm slogan">Splurting out potential wisdom...</div>
			</header>
			<nav>
				<div class="col-xs-9 col-sm-10 col-md-5 links">
					<%= link_to("Contribute Quote", "#", data: {toggle: "modal", target: "#myModal"}) %>
					<%= link_to("About", about_path()) %>
				</div>
			</nav>	
		</div>

  		<!-- Modal for new quote submission -->
  		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    		<div class="modal-dialog">
      			<div class="modal-content">
        			<div class="modal-header">
          				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          				<h4 class="modal-title" id="myModalLabel">Contribute Your Quote</h4>
        			</div>
    				<%= simple_form_for(Quote.new(), wrapper: :vertical_form) do |f| %>
	    				<div class="modal-body">
							<%= f.input(:saying, label: "What quote would you like to add?", placeholder: "Sample quote.") %>
							<br>
							<%= f.input(:author, label: "Who's the author of the quote?", placeholder: "Wise A. Witty") %>
						</div>
						<div class="modal-footer">
							<%= f.button(:submit, "Submit", class: "btn-danger submit-button") %>
						</div>
					<% end %>
      			</div>
    		</div>
 		</div>

		<div class="row">
			<% if flash[:error] %>
				<div class="col-xs-10 col-xs-offset-1 alert alert-danger" role="alert">
					<%= flash[:error] %>
				</div>
			<% end %>
		</div>
	</div>
	<%= yield %>
	<footer class="footer">
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12 col-sm-6">
					<%= link_to("May I have some more, sir?", root_path(), class: "next-quote") %>
				</div>
				<div class="col-xs-12 col-sm-6 footer-blurb">
					Cobbled together in San Francisco, CA by <a href="https://www.linkedin.com/in/obulkin">Oleg Bulkin</a>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>